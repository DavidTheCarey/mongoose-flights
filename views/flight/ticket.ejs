<%- include('../partials/header') %>

<h2>Enter a New Ticket</h2>
<form action="/flights/<%= fId %>/tickets" method="POST">
  <label>Seat:
    <input name="seat" required pattern="[A-F][1-9]\d?">    
  </label><br>
  <label>Price:
    <input name="price" required pattern="[1-9][0-9]*\.[0-9]{2}">
  </label><br>
  <button type="submit">Add Ticket</button>
</form>

